@using Microsoft.AspNetCore.Identity
@inject SignInManager<bike_gps_crud.Models.ApplicationUser> SignInManager
@inject UserManager<bike_gps_crud.Models.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Hello @User.Identity?.Name!</a>
    <form class="dropdown-item m-0 p-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button type="submit" class="btn btn-link dropdown-item">Logout</button>
    </form>
}
else
{
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
}