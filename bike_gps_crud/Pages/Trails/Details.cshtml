@page
@model bike_gps_crud.Pages.Trails.DetailsModel

@{
    ViewData["Title"] = "Trail Details";
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-4">Trail Details</h1>
        <p class="lead">Explore the information for this trail below.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Trail Info</h4>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.Name)</dd>

                        <dt class="col-sm-4 fw-bold">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.Description)</dd>

                        <dt class="col-sm-4 fw-bold">Difficulty</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.Difficulty)</dd>

                        <dt class="col-sm-4 fw-bold">Image URL</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.ImageUrl)</dd>

                        <dt class="col-sm-4 fw-bold">Trail Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.TrailType)</dd>

                        <dt class="col-sm-4 fw-bold">Date Added</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.DateAdded)</dd>

                        <dt class="col-sm-4 fw-bold">GPX Track</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Trail.GpxTrack)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Trail.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
