@page
@model bike_gps_crud.Pages.Trails.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div style="padding: 0 20px;">
    <h1>Trails Repository</h1>

    <form style="margin-bottom: 20px;">
        <p>
            <label>Search By Title: <input type="text" asp-for="SearchString" style="padding: 5px; border: 1px solid #ccc; border-radius: 4px;" /></label>
            <input type="submit" value="Filter" style="padding: 5px 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" />
        </p>
    </form>

    <select asp-for="TrailType" asp-items="Model.TrailTypes" style="padding: 5px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 20px;">
        <option value="">All</option>
    </select>

    <p>
        <a asp-page="Create" style="padding: 10px 15px; background-color: #28a745; color: white; text-decoration: none; border-radius: 4px;">Create New</a>
    </p>

    <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
        <tr style="background-color: #f8f9fa; border-bottom: 2px solid #dee2e6;">
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].Name)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].Description)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].Difficulty)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].ImageUrl)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].TrailType)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].DateAdded)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Trails[0].GpxTrack)</th>
            <th style="padding: 10px; border: 1px solid #dee2e6;">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Trails) {
            <tr style="border-bottom: 1px solid #dee2e6;">
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Name)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Description)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Difficulty)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.ImageUrl)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.TrailType)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.DateAdded)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.GpxTrack)</td>
                <td style="padding: 10px; border: 1px solid #dee2e6;">
                    <a asp-page="./Edit" asp-route-id="@item.Id" style="color: #007bff; text-decoration: none;">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" style="color: #007bff; text-decoration: none;">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" style="color: #dc3545; text-decoration: none;">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>