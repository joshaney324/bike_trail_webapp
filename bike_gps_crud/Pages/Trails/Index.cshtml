@page
@model bike_gps_crud.Pages.Trails.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="trails-repository">
    <h1>Trails Repository</h1>

    <form class="search-form">
        <p>
            <label>Search By Title: 
                <input type="text" asp-for="SearchString" class="input-text" />
            </label>
            <input type="submit" value="Filter" class="btn btn-filter" />
        </p>
    </form>

    <select asp-for="TrailType" asp-items="Model.TrailTypes" class="input-text">
        <option value="">All</option>
    </select>

    <p>
        <a asp-page="Create" class="btn btn-create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Trails[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Trails[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.Trails[0].Difficulty)</th>
                <th>@Html.DisplayNameFor(model => model.Trails[0].TrailType)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trails) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
                    <td>@Html.DisplayFor(modelItem => item.TrailType)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="link edit-link">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="link details-link">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="link delete-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>