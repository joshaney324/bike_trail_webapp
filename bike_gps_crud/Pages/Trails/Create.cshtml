@page
@model bike_gps_crud.Pages.Trails.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-4">Add a New Trail</h1>
        <p class="lead">Fill out the form below to add a new trail to the list.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Trail Details</h4>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Trail.Name" class="form-label"></label>
                            <input asp-for="Trail.Name" class="form-control" placeholder="Enter trail name" />
                            <span asp-validation-for="Trail.Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Trail.Description" class="form-label"></label>
                            <textarea asp-for="Trail.Description" class="form-control" rows="3" placeholder="Enter trail description"></textarea>
                            <span asp-validation-for="Trail.Description" class="text-danger"></span>
                        </div>

                        <!-- Difficulty -->
                        <div class="mb-3">
                            <label asp-for="Trail.Difficulty" class="form-label"></label>
                            <input asp-for="Trail.Difficulty" class="form-control" placeholder="Enter difficulty level" />
                            <span asp-validation-for="Trail.Difficulty" class="text-danger"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            <label asp-for="Trail.ImageUrl" class="form-label"></label>
                            <input asp-for="Trail.ImageUrl" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="Trail.ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- Trail Type -->
                        <div class="mb-3">
                            <label asp-for="Trail.TrailType" class="form-label"></label>
                            <input asp-for="Trail.TrailType" class="form-control" placeholder="Enter trail type" />
                            <span asp-validation-for="Trail.TrailType" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <input type="submit" value="Add Trail" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
