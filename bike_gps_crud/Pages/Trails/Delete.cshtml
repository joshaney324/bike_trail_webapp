@page
@model bike_gps_crud.Pages.Trails.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-5 text-danger">Delete Trail</h1>
        <p class="lead">Are you sure you want to delete this trail?</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4 text-danger">Trail Details</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.Name)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.Description)</dd>

                        <dt class="col-sm-3">Difficulty</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.Difficulty)</dd>

                        <dt class="col-sm-3">Image URL</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.ImageUrl)</dd>

                        <dt class="col-sm-3">Trail Type</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.TrailType)</dd>

                        <dt class="col-sm-3">Date Added</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.DateAdded)</dd>

                        <dt class="col-sm-3">GPX Track</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Trail.GpxTrack)</dd>
                    </dl>

                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="Trail.Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
